#!/usr/bin/env zsh

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(tmux list-sessions | awk '{print $1}' | sed 's/://g' | /Users/albertodesaintmalo/.fzf/bin/fzf --height=90% -m --border=sharp --prompt='Destroy Tmux Session > ')
fi

if [[ -z $selected ]]; then
    exit 0
fi

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    exit 0
fi

if tmux has-session -t=$selected; then
	tmux kill-session -t $selected
fi

tmux-destroyer
